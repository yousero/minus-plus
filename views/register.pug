extends layout

block content
  h2 Sign up
  form(method="post")
    label Login
    input(type="text" name="login" required)
    label Name
    input(type="text" name="display_name" required)
    label Password
    input(type="password" name="password" required)
    button(type="submit") Create account
  p
    | Already have an account? 
    a(href="/login") Log in



